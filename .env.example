# Configuración básica de la aplicación
NODE_ENV=development

# Base de datos y APIs (configurar según necesidad)
# DATABASE_URL=
# API_KEY=

# Configuración de internacionalización
NEXT_PUBLIC_DEFAULT_LANGUAGE=es

# Google Cloud Storage (opcional - solo si TEST_UPLOAD=true)
# GCP_PROJECT_ID=your-project-id
# GCS_BUCKET_NAME=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account",...}

# Bandera para habilitar GCS
TEST_UPLOAD=false

# Configuración de Sentry (opcional)
# NEXT_PUBLIC_SENTRY_DSN=

# Token para limpieza automática de GCS (opcional)
# CLEANUP_API_TOKEN=migraflix-cleanup-2024